@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Library Management System</h1>
        <p class="lead">Manage your books, borrow items, and much more!</p>
    </div>

    <div class="row mt-5">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Manage Books</h5>
                    </div>
                    <div class="card-body">
                        <p>View, add, edit, or delete books in the library.</p>
                        <a href="/Books/Index" class="btn btn-primary">View Books</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Borrow Items</h5>
                    </div>
                    <div class="card-body">
                        <p>Borrow books and manage your borrowing history.</p>
                        <a href="/Borrow/History" class="btn btn-success">Borrow Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">User Profile</h5>
                    </div>
                    <div class="card-body">
                        <p>View and update your profile information.</p>
                        <a href="/Profile/Index" class="btn btn-info">View Profile</a>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-4 mt-3">
                    <div class="card">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0">Admin Dashboard</h5>
                        </div>
                        <div class="card-body">
                            <p>Manage users and access administrative features.</p>
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-warning">Go to Dashboard</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12 text-center mt-4">
                <div class="alert alert-info">
                    <p>Create an account to access library features!</p>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-success">Register Now</a>
                </div>
            </div>
        }
    </div>
</div>
